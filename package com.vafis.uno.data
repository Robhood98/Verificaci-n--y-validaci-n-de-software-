package com.vafis.uno.data

import androidx.room.Dao
import androidx.room.Insert
import androidx.room.Query

@Dao
interface DaoUsuario {
    @Query("SELECT * FROM EntidadUsuario")
    suspend fun obtenerUsuarios(): List<EntidadUsuario>

    @Query("SELECT * FROM EntidadUsuario WHERE email = :email")
    suspend fun obtenerUsuario(email: String): EntidadUsuario

    @Insert
    suspend fun guardarUsuario(usuario: EntidadUsuario)
}